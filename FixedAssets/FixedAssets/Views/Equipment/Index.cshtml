@model IEnumerable<FixedAssets.Logic.EquipmentElement>
@{
    ViewBag.Title = "Wyposażenie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Request.IsAuthenticated && User.IsInRole("Supervisor") && User.IsInRole("Admin"))
{
    <p class="under-menu"><br /></p>
}
<h2>Wyposażenie</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentName)
        </th>
        <th style="text-align: right;">
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th style="text-align: right;">
            @Html.DisplayNameFor(model => model.InitialValue)
        </th>
        <th style="text-align: right;">
            @Html.DisplayNameFor(model => model.AmortisedValue)
        </th>
        <th style="text-align: right;">
            @Html.DisplayNameFor(model => model.RemainingAmount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentName)
            </td>
            <td align="right" style="padding-right: 15px;">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td align="right" style="padding-right: 15px;">
                @Html.DisplayFor(modelItem => item.InitialValue)
            </td>
            <td align="right" style="padding-right: 15px;">
                @Html.DisplayFor(modelItem => item.AmortisedValue)
            </td>
            <td align="right" style="padding-right: 15px;">
                @Html.DisplayFor(modelItem => item.RemainingAmount)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
