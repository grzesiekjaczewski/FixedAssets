@model FixedAssets.Logic.YearMonths
@{
    ViewBag.Title = "Parametry amortyzacji";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Request.IsAuthenticated && User.IsInRole("Supervisor") && User.IsInRole("Admin"))
{
    <p class="under-menu"><br /></p>
}
<h2>Parametry naliczania amortyzacji zbiorczej</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Miesiąc naliczenia amortyzacji
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.EndMonth, new SelectList(Model.EndMonths, "No", "No"), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            Rok naliczenia amortyzacji
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.EndYear, new SelectList(Model.EndYears, "No", "No"), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Wykonaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


